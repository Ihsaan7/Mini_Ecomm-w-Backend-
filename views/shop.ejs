<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Scatch - Shop</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-200 min-h-screen">
  <div class="flex">
    <!-- Sidebar -->
    <div class="w-64 bg-white p-6 min-h-screen">
      <h1 class="text-2xl font-bold mb-8">Scatch</h1>
      
      <!-- Sort By -->
      <div class="mb-8">
        <label class="block text-sm font-medium mb-2">sort by</label>
        <select class="w-full p-2 border border-gray-300 rounded text-sm">
          <option>Popular</option>
          <option>Price: Low to High</option>
          <option>Price: High to Low</option>
          <option>Newest</option>
        </select>
      </div>

      <!-- Categories -->
      <div class="mb-8">
        <ul class="space-y-3">
          <li><a href="#" class="text-gray-700 hover:text-black">New Collection</a></li>
          <li><a href="#" class="text-gray-700 hover:text-black">All Products</a></li>
          <li><a href="#" class="text-gray-700 hover:text-black">Discounted Products</a></li>
        </ul>
      </div>

      <!-- Filter By -->
      <div>
        <h3 class="font-medium mb-4">Filter by :</h3>
        <ul class="space-y-3">
          <li><a href="#" class="text-gray-700 hover:text-black">Availability</a></li>
          <li><a href="#" class="text-gray-700 hover:text-black">Discount</a></li>
        </ul>
      </div>
    </div>

    <!-- Main Content -->
    <div class="flex-1 p-6">
      <!-- Product Grid -->
      <div class="grid grid-cols-4 gap-6">
        <!-- Product Card 1 -->
       <% productData.forEach(product => { %>
  <div class="bg-white rounded-lg overflow-hidden shadow-sm">
    <img 
      src="data:image/jpeg;base64,<%= product.image.toString("base64")%>" 
      alt="<%= product.name %>" 
      class="h-48 w-full object-cover"
    />
    <div class="bg-[<%= product.panelColor %>] text-[<%= product.textColor%>] p-3 flex justify-between items-center">
      <div>
        <h3 class="font-medium"><%= product.name %></h3>
        <p class="text-sm">Rs. <%= product.price %></p>
      </div>
      <a href="/addCard/<%= product._id%>" class="w-8 h-8 bg-white text-red-400 rounded-full flex items-center justify-center font-bold hover:bg-gray-100">
        +
      </a>
    </div>
  </div>
<% }) %>


      </div>
    </div>
  </div>
</body>
</html>